<!-- app/views/posts/index.html.erb -->
<div class="user-post">

    <div class="user-card">
          <div class="user-image">
              <img src="<%= @user.photo_link %>" alt="<%= @user.name %> photo" class="img-fluid rounded-circle">
          </div>
        <div class="user-info">
          <h3><%= @user.name %></h3>
          <p class="comment">Number of posts: <%= @user.posts.count %></p>
       </div>
    </div>
      <% @posts.each_with_index do |post, index| %>
      <div class="allposts-user">
      <h3>Post <%= index + 1 %></h3>
      <p><%= post.text %></p>
      <div class="likes">
         <p class="comment">comments: <%= post.comments.count %></p>
        <p class="likes"> likes: <%= post.likes.count %></p>
      </div>
    </div>  
      <% end %>
  <div class="all-comments">
  <% @posts.each do |post| %>
    <ul>
      <% post.comments.each do |comment| %>
        <li>
          <strong><%= comment.user.name %></strong>: <%= comment.text %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
<button class="all-posts">Pagination</button>
</div>
