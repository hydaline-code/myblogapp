
<h1>Users</h1>
<div class="user-container">
<% @users.each do |user| %>
  <div class="user-card">
    <div class="user-image">
          <img src="<%= user.photo_link %>" alt="<%= user.name %> photo" class="img-fluid rounded-circle">
      </div>
    <div class="user-info">
      <h2><%= user.name %></h2>
      <p class="comment">Number of comments: X</p>
    </div>
  </div>
<% end %>
</div>
