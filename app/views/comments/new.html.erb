<%= form_with model: @comments, url: user_post_comments_path(@post), method: :post do |form| %>
<div class="form">
  <h3>Add a new comment</h3>
<div class="flex">
  <%= form.label :text %>
  <%= form.text_area :text, placeholder: "Type your comment here!", rows: 20, required: true, class: "form-comment" %>
</div>
  <%= form.submit 'Add Comment' , class: "btn-comment" %>
<% end %>
</div>